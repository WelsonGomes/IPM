program Project1;

{$APPTYPE CONSOLE}

uses
  SysUtils;
var
  iNum1, iNum2, iNum3: Integer;
  
procedure paridade(iN1, iN2, iN3: Integer);
begin
  if iN1 mod 2 = 0 then
    Write(iN1, ' - ');
  if iN2 mod 2 = 0 then
    Write(iN2, ' - ');
  if iN3 mod 2 = 0 then
    Write(iN3, ' - ');
  if iN1 mod 2 <> 0 then
    Write(iN1, ' - ');
  if iN2 mod 2 <> 0 then
    Write(iN2, ' - ');
  if iN3 mod 2 <> 0 then
    Write(iN3, ' - ');
  Readln;
end;

begin
  write('Digite o 1º número: ');
	read(iNum1);
	write('Digite o 2º número: ');
	read(iNum2);
	write('Digite o 1º número: ');
	read(iNum3);
  paridade(iNum1, iNum2, iNum3);
  Readln;
end.
 